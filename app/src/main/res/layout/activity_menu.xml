<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context="com.example.kiplagat.tictactoe.menuActivity">

    <Button
        android:id="@+id/easy"
        style="@android:style/TextAppearance.DeviceDefault"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/hard"
        android:background="#01020202"
        android:textColor="#9cd404"
        android:layout_marginBottom="10dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:onClick="easyActivity"
        android:text="EASY"
        android:textSize="60sp" />

    <Button
        android:id="@+id/hard"
        android:background="#000000"
        android:textColor="#d20505"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:onClick="hardActivity"
        android:text="HARD"
        android:textSize="60sp"
        style="@android:style/TextAppearance.DeviceDefault"/>

</RelativeLayout>
